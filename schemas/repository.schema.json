{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub repository",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "A description of the repository"
    },
    "visibility": {
      "type": "string",
      "enum": ["private", "public", "internal"],
      "description": "The visibility level of the repository"
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of topics related to the repository"
    },
    "permissions": {
      "type": "object",
      "properties": {
        "users": {
          "type": "object",
          "properties": {
            "pull": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "User ids with pull permissions"
            },
            "push": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "User ids with push permissions"
            },
            "maintain": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "User ids with maintain permissions"
            },
            "triage": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "User ids with triage permissions"
            },
            "admin": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "User ids with admin permissions"
            }
          }
        },
        "teams": {
          "type": "object",
          "properties": {
            "pull": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Team ids with pull permissions"
            },
            "push": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Team ids with push permissions"
            },
            "maintain": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Team ids with maintain permissions"
            },
            "triage": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Team ids with triage permissions"
            },
            "admin": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Team ids with admin permissions"
            }
          }
        }
      }
    },
    "pages": {
      "type": "object",
      "properties": {
        "build_type": {
          "type": "string",
          "enum": ["workflow", "legacy"],
          "default": "workflow",
          "description": "The type of build (workflow or legacy)"
        },
        "branch": {
          "type": "string",
          "default": "master",
          "description": "The branch to deploy from"
        },
        "path": {
          "type": "string",
          "enum": ["/", "/docs"],
          "default": "/",
          "description": "The path to deploy from (/ or /docs)"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["visibility"],
  "additionalProperties": false
}
